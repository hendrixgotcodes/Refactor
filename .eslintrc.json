{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "quotes": "off",
        "linebreak-style": ["error", "windows"],
        "@typescript-eslint/quotes": ["error", "double"],
        "operator-linebreak": ["error", "after"],
        "no-console": "off" //this is a cli for Christ's sakeðŸ˜†
    },
    "ignorePatterns": ["build", "node_modules", "test"]
}
